<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="clr-namespace:Entities;assembly=Entities" x:Class="WpfApp.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow" Loaded="Window_Loaded" Width="1300" Height="450">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem x:Name="ImportNew101FormMenuItem" Header="Загрузить новую 101 форму"
                          Click="ImportNew101FormMenuItem_Click" />
                <MenuItem Header="Экспорт">
                    <MenuItem Header="Форма 106" />
                    <MenuItem Header="Форма 115" />
                    <MenuItem Header="Форма 13" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Данные">
                <MenuItem x:Name="TeacherMenuItem" Header="Преподаватели" Click="TeacherMenuItem_Click" />
                <MenuItem x:Name="PositionsMenuItem" Header="Должности" Click="PositionsMenuItem_Click" />
                <Separator />
                <MenuItem x:Name="ResetDistribution" Header="Сброс распределения по дисциплинам"
                          Click="ResetDistribution_Click" />
                <MenuItem x:Name="ResetSubjects" Header="Пересоздание дисциплин" Click="ResetSubjects_Click" />
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem x:Name="SubjectsTabItem" Header="Дисциплины">
                <DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Column="0">
                            <DockPanel>
                                <TextBox x:Name="SearchTextBox" TextWrapping="Wrap" Text="ПОИСК" DockPanel.Dock="Top" />
                                <DataGrid x:Name="SubjectsDataGrid" AutoGenerateColumns="False">
                                    <DataGrid.DataContext>
                                        <entities:Предмет />
                                    </DataGrid.DataContext>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn x:Name="dataGridTextColumn"
                                                            Binding="{Binding  Path=Название}"
                                                            Header="Дисциплина" Width="auto" MaxWidth="500" />
                                        <DataGridTextColumn Binding="{Binding Path=Курс}"
                                                            Header="Курс" Width="auto" />
                                        <DataGridTextColumn Binding="{Binding Path=Семестр}"
                                                            Header="Семестр" Width="auto" />
                                        <DataGridTextColumn Binding="{Binding Path=Поток}"
                                                            Header="Поток" Width="auto" />
                                        <DataGridTextColumn Binding="{Binding Path=Специальность}"
                                                            Header="Поток" Width="auto" />
                                        <DataGridTextColumn Binding="{Binding Path=ФормаОбучения}"
                                                            Header="Форма" Width="auto" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </GroupBox>
                        <DockPanel Grid.Column="1">
                            <Label x:Name="SubjectTitleLabel"
                                   Content="{Binding SelectedItem.Название, ElementName=SubjectsDataGrid}"
                                   DockPanel.Dock="Top" Height="20" />
                            <DockPanel Grid.Column="1" DockPanel.Dock="Right">
                                <Grid x:Name="grid" Grid.Row="0" DockPanel.Dock="Top" >
                                    <Grid.Resources>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Setter Property="Margin" Value="4" />
                                        </Style>
                                    </Grid.Resources>
                                    <Grid.RowDefinitions >
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridComboBoxColumn, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn1, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn2, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn3, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn4, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn5, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn6, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn7, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn8, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn9, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn10, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn11, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn12, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn13, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn14, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn15, Mode=OneWay}"  />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn16, Mode=OneWay}" />
                                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=DataGridTextColumn17, Mode=OneWay}" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Content="Преподаватель" />
                                    <Label Grid.Row="0" Grid.Column="1" Content="Группы" />
                                    <Label Grid.Row="0" Grid.Column="2" Content="Лк" />
                                    <Label Grid.Row="0" Grid.Column="3" Content="ЛР" />
                                    <Label Grid.Row="0" Grid.Column="4" Content="ПР" />
                                    <Label Grid.Row="0" Grid.Column="5" Content="Зач" />
                                    <Label Grid.Row="0" Grid.Column="6" Content="Конс" />
                                    <Label Grid.Row="0" Grid.Column="7" Content="Экз" />
                                    <Label Grid.Row="0" Grid.Column="8" Content="КР" />
                                    <Label Grid.Row="0" Grid.Column="9" Content="НИР" />
                                    <Label Grid.Row="0" Grid.Column="10" Content="ВКР" />
                                    <Label Grid.Row="0" Grid.Column="11" Content="ГАК" />
                                    <Label Grid.Row="0" Grid.Column="12" Content="ГЭК" />
                                    <Label Grid.Row="0" Grid.Column="13" Content="РМА" />
                                    <Label Grid.Row="0" Grid.Column="14" Content="РМП" />
                                    <Label Grid.Row="0" Grid.Column="15" Content="Сумма" />

                                    <Label Grid.Row="1" Grid.Column="0" Content="План" />
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="2" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="3" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="4" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="5" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="6" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="7" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="8" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="9" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="10" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="11" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="12" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="13" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="14" Text="" />
                                    <TextBox Grid.Row="1" Grid.Column="15" Text="" />

                                    <Label Grid.Row="2" Grid.Column="0" Content="Сумма" />
                                    <TextBox Grid.Row="2" Grid.Column="2" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="3" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="4" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="5" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="6" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="7" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="8" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="9" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="10" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="11" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="12" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="13" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="14" Text="" />
                                    <TextBox Grid.Row="2" Grid.Column="15" Text="" />
                                </Grid>
                                <Separator DockPanel.Dock="Top"/>
                                <Grid DockPanel.Dock="Bottom">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="AddEntryButton" Grid.Column="0" Content="Добавить" Margin="20,5"/>
                                    <Button x:Name="SaveEntriesButton" Grid.Column="1" Content="Сохранить" Margin="20,5"/>
                                </Grid>
                                <DataGrid x:Name="EntriesDataGrid" Grid.Row="1" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" AutoGenerateColumns="False" DockPanel.Dock="Top">
                                    <DataGrid.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Padding" Value="6 0"/>
                                        </Style>
                                    </DataGrid.CellStyle>
                                    <DataGrid.DataContext>
                                        <entities:Запись />
                                    </DataGrid.DataContext>
                                    <DataGrid.Columns>
                                        <DataGridComboBoxColumn x:Name="DataGridComboBoxColumn" Header="Преподаватель" Width="auto" MaxWidth="500" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn1" Binding="{Binding Path=Предмет.Поток}" Header="Группа" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn2" Binding="{Binding Path=ФактическаяНагрузка.Лекции}" Header="Лк" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn3" Binding="{Binding Path=ФактическаяНагрузка.Лабораторные}" Header="ЛР" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn4" Binding="{Binding Path=ФактическаяНагрузка.Практические}" Header="ПР" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn5" Binding="{Binding Path=ФактическаяНагрузка.Зачеты}" Header="Зач" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn6" Binding="{Binding Path=ФактическаяНагрузка.Консультации}" Header="Конс" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn7" Binding="{Binding Path=ФактическаяНагрузка.Экзамены}" Header="Экз" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn8" Binding="{Binding Path=ФактическаяНагрузка.КурсовоеПроектирование}" Header="КР" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn9" Binding="{Binding Path=ФактическаяНагрузка.Нир}" Header="НИР" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn10" Binding="{Binding Path=ФактическаяНагрузка.Вкр}" Header="ВКР" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn11" Binding="{Binding Path=ФактическаяНагрузка.Гак}" Header="ГАК" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn12" Binding="{Binding Path=ФактическаяНагрузка.Гэк}" Header="ГЭК" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn13" Binding="{Binding Path=ФактическаяНагрузка.Рма}" Header="РМА" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn14" Binding="{Binding Path=ФактическаяНагрузка.Рмп}" Header="РМП" Width="auto" />
                                        <DataGridTextColumn x:Name="DataGridTextColumn15" Binding="{Binding Path=ФактическаяНагрузка.Сумма}" Header="Сумма" Width="auto" />
                                        <DataGridTemplateColumn x:Name="DataGridTextColumn16" Header="Вставить" Width="auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button>View Details</Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn x:Name="DataGridTextColumn17" Header="Удалить" Width="auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button>View Details</Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid />
                            </DockPanel>
                        </DockPanel>
                        <GridSplitter Grid.Column="0" Width="1" />
                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>